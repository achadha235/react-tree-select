{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "react",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "./src/stories",
    "dist"
  ]
}